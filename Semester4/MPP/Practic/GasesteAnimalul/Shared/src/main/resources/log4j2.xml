<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- ==================== APPENDERS ==================== -->
    <!-- Appender pentru logurile aplicației -->
    <Appenders>
        <File name="AppFileAppender" fileName="logs/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1} - %m%n" />
        </File>

        <!-- Appender pentru logurile Hibernate -->
        <File name="HibernateFileAppender" fileName="logs/hibernate.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1} - %m%n" />
        </File>

        <!-- Dacă vrei și console log -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5p %c{1} - %m%n" />
        </Console>
    </Appenders>

    <!-- ==================== LOGGERS ==================== -->
    <Loggers>
        <!-- Loggerul principal al aplicației tale -->
        <Root level="info">
            <AppenderRef ref="AppFileAppender" />
            <AppenderRef ref="ConsoleAppender" />
        </Root>

        <!-- Logger special pentru tot ce vine din org.hibernate -->
        <Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="HibernateFileAppender" />
        </Logger>
    </Loggers>
</Configuration>
