<Configuration status="WARN">

    <!-- ==================== APPENDERS ==================== -->
    <Appenders>
        <File name="AppFileAppender" fileName="logs/application.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1} - %m%n" />
        </File>

        <File name="HibernateFileAppender" fileName="logs/hibernate.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1} - %m%n" />
        </File>

        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5p %c{1} - %m%n" />
        </Console>
    </Appenders>

    <!-- ==================== LOGGERS ==================== -->
    <Loggers>
        <!-- Loggerul principal al aplicaÈ›iei -->
        <Root level="debug">
            <AppenderRef ref="AppFileAppender" />
            <AppenderRef ref="ConsoleAppender" />
        </Root>

        <!-- Logger pentru Hibernate -->
        <Logger name="org.hibernate" level="debug" additivity="false">
            <AppenderRef ref="HibernateFileAppender" />
        </Logger>

        <!-- Logger pentru SQL-ul Hibernate -->
        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="HibernateFileAppender" />
        </Logger>

        <!-- Logger pentru parametrii SQL -->
        <Logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="false">
            <AppenderRef ref="HibernateFileAppender" />
        </Logger>
    </Loggers>
</Configuration>
